<?xml version="1.0"?>
<launch>

    <let name="urdf_path" 
         value="$(find-pkg-share mobilearmbot_description)/urdf/my_robot.urdf.xacro"/>
    <let name="rviz_config_path"
         value="$(find-pkg-share mobilearmbot_bringup)/rviz/urdf_config.rviz"/>
    <let name="gazebo_launch_path"
         value="$(find-pkg-share gazebo_ros)/launch/gazebo.launch.py"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" 
               value="$(command 'xacro $(var urdf_path)')"/> 
    </node>
    
    <include file="$(var gazebo_launch_path)">
          <arg name="world" value="$(find-pkg-share mobilearmbot_bringup)/worlds/test_world.world"/>
          
    </include>
    
    <node pkg="gazebo_ros" exec="spawn_entity.py" 
          args="-entity my_robot -topic robot_description"/>

    <node pkg="rviz2" exec="rviz2" 
          args="-d $(var rviz_config_path)"/>

</launch>
